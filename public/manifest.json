{
  "manifest_version": 3,
  "name": "Italian Verb Conjugator",
  "version": "1.0",
  "description": "Instant Italian verb translations and conjugations on any webpage.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/index.js"
      ]
    }
  ],
  "host_permissions": [
    "https://api.ultralingua.com/*",
    "https://translation.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Italian Verb Settings"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/index.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}